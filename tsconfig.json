{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "jsx": "react-jsx",
        "importHelpers": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "rootDir": "src/js/components/",
        "baseUrl": "src/js/components",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/js/components/**/*.tsx",
        "src/js/components/**/*.ts"
    ]
}